{
  "name": "package-name",
  "description": "example package",
  "version": "0.0.1",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "example-cli": "./bin/run"
  },
  "engines": {
    "node": ">=12"
  },
  "oclif": {
    "bin": "example-cli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found"
    ]
  },
  "npm-defaults": {
    "type": "oclif-cli"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "webpack --version && webpack",
    "test": "concurrently \"yarn check:types\" \"jest test --maxWorkers=1 --collectCoverage=false\"",
    "fix": "yarn lint --fix",
    "lint": "yarn eslint \"{src,test,typing}/**/*.{ts,js}\" --ignore-pattern **/node_modules/*",
    "format": "prettier \"{src/*,test/*,typing/*,templates/*,examples/*,}*/*.{ts,js,json}\" --write",
    "release": "semantic-release",
    "release:dry": "yarn release --dry-run",
    "package": "rm -rf dist && yarn build",
    "prepack": "bash -c 'yarn ts-node -r tsconfig-paths/register \"$(npm root -g)/@oclif/dev-cli/bin/run\" manifest' && oclif-dev readme",
    "postpack": "rm -f oclif.manifest.json",
    "check:types": "yarn ttsc -p tsconfig.lint.json",
    "check:project": "yarn npm-defaults lint"
  },
  "dependencies": {
    "@oclif/config": "^1.15.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.2",
    "@oclif/plugin-help": "^2.2.3",
    "@oclif/plugin-not-found": "^1.2.3",
    "@zefiros/npm-defaults": "file:.yalc/@zefiros/npm-defaults",
    "@zerollup/ts-transform-paths": "^1.7.17",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslib": "^1.11.1",
    "ttypescript": "^1.5.10",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  }
}
