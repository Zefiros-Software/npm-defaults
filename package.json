{
  "name": "@zefiros/npm-defaults",
  "description": "Build tools for Zefiros packages",
  "version": "0.2.0-beta.19",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "npm-defaults": "./bin/run"
  },
  "oclif": {
    "bin": "npm-defaults",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found",
      "@oclif/plugin-warn-if-update-available"
    ]
  },
  "npm-defaults": {
    "type": "oclif-cli",
    "skipTemplate": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zefiros-Software/npm-defaults.git"
  },
  "files": [
    ".eslintrc.js",
    ".huskyrc.js",
    "oclif.manifest.json",
    "commitlint.config.js",
    "jest.config.js",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "tsconfig.base.json",
    "wallaby.base.js",
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "yarn ttsc -p tsconfig.dist.json",
    "test": "concurrently \"yarn check:types\" \"yarn jest test --maxWorkers=1\"",
    "fix": "yarn lint --fix",
    "lint": "eslint \"{src,test,typing}/**/*.{ts,js}\"",
    "format": "prettier \"{src,test,typing,templates}/**/*.{ts,js,json}\" --write",
    "release": "yarn semantic-release",
    "release:dry": "yarn release --dry-run",
    "package": "rm -rf dist && yarn build",
    "prepack": "yarn ts-node -r tsconfig-paths/register node_modules/@oclif/dev-cli/bin/run manifest && oclif-dev readme",
    "postpack": "rm -f oclif.manifest.json",
    "check:types": "yarn ttsc -p tsconfig.lint.json",
    "check:project": "yarn npm-defaults lint"
  },
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/github": "^1.1.0",
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.3",
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.13.3",
    "@oclif/plugin-help": "^2.2.1",
    "@oclif/plugin-not-found": "^1.2.3",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "@semantic-release/changelog": "^3.0.5",
    "@semantic-release/git": "^7.1.0-beta.7",
    "@types/jest": "^24.0.21",
    "@types/prettier": "^1.18.3",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "@zerollup/ts-transform-paths": "^1.7.3",
    "concurrently": "^5.0.0",
    "conventional-changelog": "^3.1.13",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-extra-rules": "^0.0.0-development",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-unicorn": "^12.1.0",
    "execa": "^3.2.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "line-diff": "^2.1.0",
    "lint-staged": "^10.0.0-0",
    "npm-check": "^5.9.0",
    "prettier": "^1.18.2",
    "recursive-copy": "^2.0.10",
    "semantic-release": "^16.0.0-beta.27",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^1.10.0",
    "ttypescript": "^1.5.7",
    "typescript": "^3.7.1-rc",
    "variable-diff": "^2.0.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.2",
    "package-json": "^6.5.0"
  }
}
