{
  "name": "@zefiros/npm-defaults",
  "description": "Build tools for Zefiros packages",
  "version": "0.2.0-beta.76",
  "license": "MIT",
  "main": "./dist/main.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "npm-defaults": "bin/run"
  },
  "engines": {
    "node": ">=12"
  },
  "npm-defaults": {
    "type": "yargs-cli",
    "template": {
      "exclude": [
        ".eslintrc.js",
        "babel.config.js",
        "commitlint.config.js",
        "lefthook.yml",
        "prettier.config.js",
        "release.config.js",
        "tsconfig.dist.json",
        "tsconfig.json",
        "wallaby.js",
        "webpack.config.js"
      ],
      "ignore": {
        "files": true
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zefiros-Software/npm-defaults.git"
  },
  "files": [
    ".eslintrc.base.js",
    "babel.config.js",
    "bin",
    "commitlint.config.js",
    "dist",
    "jest.config.js",
    "lefthook.base.yml",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "templates",
    "tsconfig.base.json",
    "wallaby.base.js",
    "webpack.library.js",
    "webpack.yargs.js"
  ],
  "scripts": {
    "build": "npx webpack --version && npx webpack",
    "test": "npx concurrently \"npm run check:types\" \"npx jest test --maxWorkers=1\"",
    "coverage": "jest test --maxWorkers=1 --collectCoverage=true",
    "fix": "npm run lint --fix",
    "lint": "npx eslint \"{src,test,typing}/**/*.{ts,js}\" --no-eslintrc -c .eslintrc.js --ignore-path .gitignore --resolve-plugins-relative-to .",
    "lint:full": "bash -c \"FULL_LINT=true npm run lint\"",
    "format": "npx prettier \"**/*.{ts,js,json,yml,yaml}\" --ignore-path .gitignore --write",
    "release": "npx semantic-release",
    "release:dry": "npm run release --dry-run",
    "package": "rm -rf dist && npm run build",
    "check:types": "npx tsc -p tsconfig.json",
    "check:project": "npx npm-defaults lint",
    "check:cost": "npx cost-of-modules --no-install --include-dev",
    "postinstall": "\"./bin/lefthook\""
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "@zefiros/jszip-slim": "^1.0.0-beta.2",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "date-fns": "^2.16.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "ignore-loader": "^0.1.2",
    "jest": "^26.6.3",
    "picomatch": "^2.2.2",
    "prettier": "^2.2.1",
    "semver": "^7.3.4",
    "ts-loader": "^8.0.14",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-node-externals": "^2.5.2"
  },
  "peerDependencies": {
    "typescript": "^4.1.3"
  },
  "globalDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@commitlint/cli": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "concurrently": "^5.3.0",
    "conventional-changelog": "^3.1.24",
    "semantic-release": "^17.3.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@octokit/auth-action": "^1.3.1",
    "@octokit/rest": "^18.0.12",
    "@types/concurrently": "^5.2.1",
    "@types/find-root": "^1.1.2",
    "@types/is-ci": "^2.0.0",
    "@types/picomatch": "^2.2.1",
    "@types/semver": "^7.3.4",
    "@types/source-map-support": "^0.5.3",
    "@types/yargs": "^15.0.12",
    "concurrently": "^5.3.0",
    "encoding": "^0.1.13",
    "eslint-plugin-deprecation": "^1.2.0",
    "execa": "^5.0.0",
    "find-root": "^1.1.0",
    "is-ci": "^2.0.0",
    "line-diff": "^2.1.1",
    "p-limit": "^3.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "variable-diff": "^2.0.2",
    "yargs": "^16.2.0"
  }
}
