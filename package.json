{
  "name": "@zefiros/npm-defaults",
  "description": "Build tools for Zefiros packages",
  "version": "0.2.0-beta.47",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "npm-defaults": "./bin/run"
  },
  "engines": {
    "node": ">=12"
  },
  "oclif": {
    "bin": "npm-defaults",
    "commands": "./dist/commands",
    "plugins": ["@oclif/plugin-help", "@oclif/plugin-not-found"]
  },
  "npm-defaults": {
    "type": "oclif-cli",
    "skipTemplate": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zefiros-Software/npm-defaults.git"
  },
  "files": [
    ".eslintrc.base.js",
    ".huskyrc.js",
    "oclif.manifest.json",
    "commitlint.config.js",
    "jest.config.js",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "tsconfig.base.json",
    "wallaby.base.js",
    "webpack.oclif.js",
    "lint-staged.config.js",
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "webpack --version && webpack",
    "test": "concurrently \"yarn check:types\" \"jest test --maxWorkers=1 --collectCoverage=false\"",
    "fix": "yarn lint --fix",
    "lint": "yarn eslint \"{src,test,typing}/**/*.{ts,js}\" --ignore-pattern **/node_modules/*",
    "format": "prettier \"{src/*,test/*,typing/*,templates/*,examples/*,}*/*.{ts,js,json}\" --write",
    "release": "semantic-release",
    "release:dry": "yarn release --dry-run",
    "package": "rm -rf dist && yarn build",
    "prepack": "bash -c 'yarn ts-node -r tsconfig-paths/register \"$(npm root -g)/@oclif/dev-cli/bin/run\" manifest' && oclif-dev readme",
    "postpack": "rm -f oclif.manifest.json",
    "check:types": "yarn ttsc -p tsconfig.lint.json",
    "check:project": "yarn npm-defaults lint"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@oclif/config": "^1.15.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@zerollup/ts-transform-paths": "^1.7.17",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-extra-rules": "^0.0.0-development",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "tsconfig-paths": "^3.9.0"
  },
  "globalDependencies": {
    "@oclif/dev-cli": "^1.22.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "semantic-release": "^17.0.7",
    "concurrently": "^5.2.0",
    "conventional-changelog": "^3.1.18",
    "webpack": "^5.0.0-beta.13",
    "webpack-cli": "^3.3.11"
  },
  "globalDevDependencies": {
    "@commitlint/cli": "^8.3.5",
    "lint-staged": "^10.1.7"
  },
  "peerDependencies": {
    "@zerollup/ts-transform-paths": "^1.7.17",
    "ttypescript": "^1.5.10",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@oclif/plugin-help": "^3.0.0",
    "@oclif/plugin-not-found": "^1.2.3",
    "@octokit/action": "^2.4.0",
    "@types/concurrently": "^5.2.0",
    "@types/find-root": "^1.1.1",
    "@types/normalize-package-data": "^2.4.0",
    "@zerollup/ts-transform-paths": "^1.7.17",
    "concurrently": "^5.2.0",
    "execa": "^4.0.0",
    "find-root": "^1.1.0",
    "line-diff": "^2.1.0",
    "normalize-package-data": "^2.5.0",
    "recursive-copy": "^2.0.10",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslib": "^1.11.1",
    "ttypescript": "^1.5.10",
    "typescript": "^3.8.3",
    "variable-diff": "^2.0.1",
    "webpack-node-externals": "^1.7.2"
  }
}
