{
  "name": "@zefiros/npm-defaults",
  "description": "Build tools for Zefiros packages",
  "version": "0.2.0-beta.39",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "npm-defaults": "./bin/run"
  },
  "engines": {
    "node": ">=12"
  },
  "oclif": {
    "bin": "npm-defaults",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found"
    ]
  },
  "npm-defaults": {
    "type": "oclif-cli",
    "skipTemplate": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zefiros-Software/npm-defaults.git"
  },
  "files": [
    ".eslintrc.base.js",
    ".huskyrc.js",
    "oclif.manifest.json",
    "commitlint.config.js",
    "jest.config.js",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "tsconfig.base.json",
    "wallaby.base.js",
    "webpack.oclif.js",
    "lint-staged.config.js",
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "yarn webpack",
    "test": "concurrently \"yarn check:types\" \"yarn jest test --maxWorkers=1\"",
    "fix": "yarn lint --fix",
    "lint": "eslint \"{src,test,typing}/**/*.{ts,js}\" --ignore-pattern **/node_modules/*",
    "format": "prettier \"{src/*,test/*,typing/*,templates/*,examples/*,}*/*.{ts,js,json}\" --write",
    "release": "yarn semantic-release",
    "release:dry": "yarn release --dry-run",
    "package": "rm -rf dist && yarn build",
    "prepack": "yarn ts-node -r tsconfig-paths/register node_modules/@oclif/dev-cli/bin/run manifest && oclif-dev readme",
    "postpack": "rm -f oclif.manifest.json",
    "check:types": "yarn ttsc -p tsconfig.lint.json",
    "check:project": "yarn npm-defaults lint"
  },
  "dependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@oclif/config": "^1.14.0",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^25.1.4",
    "@types/prettier": "^1.19.0",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "@zerollup/ts-transform-paths": "^1.7.12",
    "concurrently": "^5.1.0",
    "conventional-changelog": "^3.1.18",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-extra-rules": "^0.0.0-development",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-unicorn": "^17.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.1",
    "semantic-release": "^17.0.4",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.2",
    "@oclif/plugin-help": "^2.2.3",
    "@oclif/plugin-not-found": "^1.2.3",
    "@octokit/action": "^2.0.0",
    "execa": "^4.0.0",
    "line-diff": "^2.1.0",
    "recursive-copy": "^2.0.10",
    "ts-loader": "^6.2.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslib": "^1.11.1",
    "variable-diff": "^2.0.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  }
}