{
  "name": "@zefiros/npm-defaults",
  "description": "Build tools for Zefiros packages",
  "version": "0.2.0-beta.71",
  "license": "MIT",
  "main": "./dist/main.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "npm-defaults": "./bin/run"
  },
  "engines": {
    "node": ">=12"
  },
  "npm-defaults": {
    "type": "yargs-cli",
    "template": {
      "exclude": [
        ".eslintrc.js",
        "babel.config.js",
        "commitlint.config.js",
        "prettier.config.js",
        "release.config.js",
        "tsconfig.dist.json",
        "tsconfig.json",
        "wallaby.js",
        "webpack.config.js"
      ],
      "ignore": {
        "files": true
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zefiros-Software/npm-defaults.git"
  },
  "files": [
    ".eslintrc.base.js",
    "babel.config.js",
    "bin",
    "commitlint.config.js",
    "dist",
    "jest.config.js",
    "lefthook.base.yml",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "templates",
    "tsconfig.base.json",
    "wallaby.base.js",
    "webpack.library.js",
    "webpack.yargs.js"
  ],
  "scripts": {
    "build": "webpack --version && webpack",
    "test": "concurrently \"yarn check:types\" \"jest test --maxWorkers=1\"",
    "coverage": "jest test --maxWorkers=1 --collectCoverage=true",
    "fix": "yarn lint --fix",
    "lint": "yarn eslint \"{src,test,typing}/**/*.{ts,js}\" --ignore-path .gitignore",
    "lint:full": "bash -c \"FULL_LINT=true yarn lint\"",
    "format": "prettier \"**/*.{ts,js,json,yml,yaml}\" --ignore-path .gitignore --write",
    "release": "semantic-release",
    "release:dry": "yarn release --dry-run",
    "package": "rm -rf dist && yarn build",
    "check:types": "yarn tsc -p tsconfig.json",
    "check:project": "yarn npm-defaults lint",
    "check:cost": "npx cost-of-modules --yarn --no-install --include-dev",
    "postinstall": "./bin/lefthook"
  },
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "@zefiros/jszip-slim": "^1.0.0-beta.2",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "date-fns": "^2.16.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "ignore-loader": "^0.1.2",
    "jest": "^26.4.2",
    "picomatch": "^2.2.2",
    "prettier": "^2.1.1",
    "semver": "^7.3.2",
    "ts-loader": "^8.0.3",
    "webpack-node-externals": "^2.5.2"
  },
  "peerDependencies": {
    "typescript": "^4.0.3"
  },
  "globalDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@commitlint/cli": "^9.1.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "concurrently": "^5.3.0",
    "conventional-changelog": "^3.1.23",
    "semantic-release": "^17.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^5.1.3",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "@octokit/auth-action": "^1.2.2",
    "@octokit/rest": "^18.0.5",
    "@types/concurrently": "^5.2.1",
    "@types/find-root": "^1.1.2",
    "@types/is-ci": "^2.0.0",
    "@types/picomatch": "^2.2.1",
    "@types/semver": "^7.3.4",
    "@types/source-map-support": "^0.5.3",
    "@types/yargs": "^15.0.5",
    "concurrently": "^5.3.0",
    "encoding": "^0.1.13",
    "execa": "^4.0.3",
    "find-root": "^1.1.0",
    "is-ci": "^2.0.0",
    "line-diff": "^2.1.1",
    "p-limit": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3",
    "variable-diff": "^2.0.2",
    "yargs": "^16.0.3"
  }
}
