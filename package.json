{
  "name": "@zefiros/npm-defaults",
  "description": "Build tools for Zefiros packages",
  "version": "0.2.0-beta.54",
  "license": "MIT",
  "main": "./dist/main.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "npm-defaults": "./bin/run"
  },
  "engines": {
    "node": ">=12"
  },
  "npm-defaults": {
    "type": "yargs-cli",
    "template": {
      "exclude": [
        ".eslintrc.js",
        ".huskyrc.js",
        "ava.config.js",
        "tsconfig.json",
        "tsconfig.dist.json",
        "webpack.config.js",
        "commitlint.config.js",
        "lint-staged.config.js",
        "prettier.config.js",
        "release.config.js",
        "wallaby.js"
      ],
      "ignore": {
        "files": true
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zefiros-Software/npm-defaults.git"
  },
  "files": [
    ".eslintrc.base.js",
    ".huskyrc.js",
    "jest.config.js",
    "commitlint.config.js",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "tsconfig.base.json",
    "wallaby.base.js",
    "webpack.yargs.js",
    "webpack.library.js",
    "lint-staged.config.js",
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "webpack --version && webpack",
    "test": "concurrently \"yarn check:types\" \"jest test --maxWorkers=1\"",
    "coverage": "jest test --maxWorkers=1 --collectCoverage=true",
    "fix": "yarn lint --fix",
    "lint": "yarn eslint \"{src,test,typing}/**/*.{ts,js}\" --ignore-pattern **/node_modules/* --resolve-plugins-relative-to .",
    "format": "prettier \"{src/*,test/*,typing/*,templates/*,examples/*,}*/*.{ts,js,json}\" --write",
    "release": "semantic-release",
    "release:dry": "yarn release --dry-run",
    "package": "rm -rf dist && yarn build",
    "check:types": "yarn tsc -p tsconfig.json",
    "check:project": "yarn npm-defaults lint",
    "check:cost": "npx cost-of-modules --yarn --no-install --include-dev"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "ignore-loader": "^0.1.2",
    "jest": "^26.3.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "ts-loader": "^8.0.2",
    "webpack-node-externals": "^2.5.1"
  },
  "peerDependencies": {
    "typescript": "^4.0.1-rc"
  },
  "globalDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "lint-staged": "^10.2.11",
    "concurrently": "^5.3.0",
    "conventional-changelog": "^3.1.21",
    "semantic-release": "^17.1.1",
    "webpack": "5.0.0-beta.24",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "@octokit/auth-action": "^1.2.2",
    "@octokit/rest": "^18.0.3",
    "@types/concurrently": "^5.2.1",
    "@types/find-root": "^1.1.1",
    "@types/is-ci": "^2.0.0",
    "@types/source-map-support": "^0.5.2",
    "@types/yargs": "^15.0.5",
    "concurrently": "^5.3.0",
    "encoding": "^0.1.13",
    "execa": "^4.0.3",
    "fast-glob": "^3.2.4",
    "find-root": "^1.1.0",
    "is-ci": "^2.0.0",
    "line-diff": "^2.1.1",
    "p-limit": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.1-rc",
    "variable-diff": "^2.0.1",
    "yargs": "^15.4.1"
  }
}
