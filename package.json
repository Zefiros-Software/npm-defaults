{
  "name": "@zefiros/npm-defaults",
  "description": "Build tools for Zefiros packages",
  "version": "0.2.0-beta.51",
  "license": "MIT",
  "main": "./dist/main.js",
  "types": "./dist/src/index.d.ts",
  "bin": {
    "npm-defaults": "./bin/run"
  },
  "engines": {
    "node": ">=12"
  },
  "npm-defaults": {
    "type": "yargs-cli",
    "template": {
      "exclude": [
        ".eslintrc.js",
        ".huskyrc.js",
        "ava.config.js",
        "tsconfig.json",
        "tsconfig.dist.json",
        "webpack.config.js",
        "commitlint.config.js",
        "lint-staged.config.js",
        "prettier.config.js",
        "release.config.js",
        "wallaby.js"
      ],
      "ignore": {
        "files": true
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zefiros-Software/npm-defaults.git"
  },
  "files": [
    ".eslintrc.base.js",
    ".huskyrc.js",
    "ava.config.js",
    "commitlint.config.js",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "tsconfig.base.json",
    "wallaby.base.js",
    "webpack.yargs.js",
    "lint-staged.config.js",
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "webpack --version && webpack",
    "test": "concurrently \"yarn check:types\" \"yarn ava\"",
    "coverage": "nyc --reporter=text-summary ava",
    "fix": "yarn lint --fix",
    "lint": "yarn eslint \"{src,test,typing}/**/*.{ts,js}\" --ignore-pattern **/node_modules/* --resolve-plugins-relative-to .",
    "format": "prettier \"{src/*,test/*,typing/*,templates/*,examples/*,}*/*.{ts,js,json}\" --write",
    "release": "semantic-release",
    "release:dry": "yarn release --dry-run",
    "package": "rm -rf dist && yarn build",
    "check:types": "yarn ttsc -p tsconfig.json",
    "check:project": "yarn npm-defaults lint",
    "check:cost": "npx cost-of-modules --yarn --no-install --include-dev"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "ava": "^3.9.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "prettier": "^2.0.5"
  },
  "globalDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "lint-staged": "^10.2.10",
    "concurrently": "^5.2.0",
    "conventional-changelog": "^3.1.21",
    "nyc": "^15.1.0",
    "semantic-release": "^17.0.8",
    "webpack": "5.0.0-beta.17",
    "webpack-cli": "^3.3.11"
  },
  "peerDependencies": {
    "@zerollup/ts-transform-paths": "^1.7.18",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@octokit/action": "^3.0.0",
    "@types/concurrently": "^5.2.1",
    "@types/find-root": "^1.1.1",
    "@types/is-ci": "^2.0.0",
    "@types/normalize-package-data": "^2.4.0",
    "@types/source-map-support": "^0.5.1",
    "@types/yargs": "^15.0.5",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "concurrently": "^5.2.0",
    "encoding": "^0.1.12",
    "execa": "^4.0.2",
    "find-root": "^1.1.0",
    "is-ci": "^2.0.0",
    "line-diff": "^2.1.0",
    "normalize-package-data": "^2.5.0",
    "recursive-copy": "^2.0.10",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.5",
    "variable-diff": "^2.0.1",
    "webpack-node-externals": "^1.7.2",
    "yargs": "^15.3.1"
  }
}
