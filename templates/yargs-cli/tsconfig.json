{
  "extends": "@zefiros/npm-defaults/tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "src/**/.*.ts",
    "examples/**/*.ts",
    "examples/**/.*.ts",
    "static/**/*.ts",
    "static/**/.*.ts",
    "test/**/*.ts",
    "test/**/.*.ts",
    "typings/**/*.ts",
    "typings/**/.*.ts",
    "*.js",
    ".*.js",
    "*.json",
    ".*.json"
  ],
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
      "*": ["./typings/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "."
  }
}
